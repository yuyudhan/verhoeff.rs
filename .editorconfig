# FilePath: .editorconfig

# EditorConfig is awesome: https://EditorConfig.org
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files (like Cargo.toml)
[*.toml]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab